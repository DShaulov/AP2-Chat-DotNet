@{
	string warning = ViewBag.Warning;
}
@model AP2_Chat_Dotnet_Rank.Models.Ranking;
<br />
<form class="my-form" asp-action="AddRanking" method="post">
	<div class="form-group">
		<label asp-for=name  class="control-label">Name</label>
		<input  asp-for=name class="form-control" />

		<div class="my-select-div">
			<label  asp-for=rank class="control-label" name="rank">Rating:</label>
			<select class="my-select form-control" asp-for=rank name="rank">
			<option>1</option>
			<option>2</option>
			<option>3</option>
			<option>4</option>
			<option>5</option>
		</select>
		</div>
		
		<label  asp-for=content class="control-label">Tell Us Why:</label>
		<textarea asp-for=content class="form-control" rows=5 cols=5></textarea>
		
		<br />
		<button type="submit" class="btn btn-primary">Add</button>
		<br />
		<br />
		<p class="my-warning">@warning</p>
	</div>
</form>
