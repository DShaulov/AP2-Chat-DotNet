@{
    List<Ranking> rankings = ViewBag.Rankings;
    float averageRank = ViewBag.AverageRank;
}
<br />
<h5>Our Average Rating: @averageRank.ToString("0.00")</h5>
<h5>Our Ratings:</h5>
<form asp-action="SearchRankings" method="post">
    <label for="search-form">Search:</label>
    <div class="search-form-div">
        <input type="search" class="form-control" id="search-form" name="searchString"/>
        <button type="submit" class="btn btn-primary">Go</button>
    </div>
</form>
<br />
@foreach (Ranking ranking in rankings)
{
    <a class="a-no-highlight" asp-controller="Ranking" asp-action="ViewRank" asp-route-rankingId=@ranking.id>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">@ranking.name: @ranking.rank/5</h5>
            <p class="card-text">@ranking.content</p>
            <p class="card-text card-text-date">@ranking.date @ranking.time</p>
          </div>
        </div>
    </a>
    
}
